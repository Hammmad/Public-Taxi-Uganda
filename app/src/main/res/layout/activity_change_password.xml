<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChangePasswordActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/change_password_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/change_password_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/change_password_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@android:color/white"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:textColor="@color/grey_700"
            app:met_baseColor="@color/grey_500"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="@color/grey_400"
            app:met_primaryColor="@color/grey_500"
            app:met_textColorHint="@color/grey_300"
            app:met_underlineColor="@android:color/white" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/change_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@android:color/white"
            android:hint="New Password"
            android:inputType="textPassword"
            android:textColor="@color/grey_700"
            app:met_baseColor="@color/grey_500"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="@color/grey_400"
            app:met_primaryColor="@color/grey_500"
            app:met_textColorHint="@color/grey_300"
            app:met_underlineColor="@android:color/white" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/change_password_conform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@android:color/white"
            android:hint="Conform Password"
            android:inputType="textPassword"
            android:textColor="@color/grey_700"
            app:met_baseColor="@color/grey_500"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="@color/grey_400"
            app:met_primaryColor="@color/grey_500"
            app:met_textColorHint="@color/grey_300"
            app:met_underlineColor="@android:color/white" />

        <Button
            android:id="@+id/change_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_bg"
            android:padding="10dp"
            android:text="Change"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

</LinearLayout>